<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
	<moduleName>SexLab Separate Orgasm</moduleName>
	<installSteps order="Explicit">	
		<installStep name="Core Setup">
			<optionalFileGroups>
				<group name="SLSO" type="SelectExactlyOne">
					<plugins order="Explicit">
						<plugin name="SLSO">
							<description>
								<![CDATA[Core mod, includes .esp with widgets, scripts, mcm and json config file with mod settings. Data\SKSE\Plugins\StorageUtilData\SLSO]]>
							</description>
							<conditionFlags>
								<flag name="Config">Active</flag>
							</conditionFlags>
							<files>
								<folder source="00_Core\00_SLSO" destination=""/>
							</files>
							<typeDescriptor>
								<type name="Required"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
				<group name="SexLabFramework" type="SelectExactlyOne">
					<plugins order="Explicit">
						<plugin name="SexLabFramework">
							<description>
								<![CDATA[Modified SexLabFramework scripts for SLSO to work]]>
							</description>
							<conditionFlags>
								<flag name="sslThreadController">Active</flag>
							</conditionFlags>
							<files>
								<folder source="00_Core\01_SexLabFramework" destination=""/>
							</files>
							<typeDescriptor>
								<type name="Required"/>
							</typeDescriptor>
						</plugin>
					</plugins>   
				</group>
				<group name="SexLabAroused" type="SelectAny">
					<plugins order="Explicit">			
						<plugin name="SLA">
							<description>
								<![CDATA[SLAR AAAA 1.0.5 based patch. Support for SLSO.]]>
							</description>
							<conditionFlags>
								<flag name="SLA">Active</flag>
							</conditionFlags>
							<files>
								<folder source="00_Core\02_SexLabAroused" destination=""/>
							</files>
							<typeDescriptor>
								<dependencyType>
									<defaultType name="NotUsable"/>
									<patterns>
										<pattern>
											<dependencies>
												<fileDependency file="SexLabAroused.esm" state="Active"/>
											</dependencies>
											<type name="Recommended"/>
										</pattern>
									</patterns>
								</dependencyType>
							</typeDescriptor>
						</plugin>
					</plugins>   
				</group>
			</optionalFileGroups>
		</installStep>
	</installSteps>
</config>		